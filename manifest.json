{
  "manifest_version": 2,

  "name": "Youtube2HTML5",
  "description": "Reload the youtube page in HTML5",
  "version": "1.0",
  "manifest_version": 2,

  "icons": { 
            "16":"images/icon.png", 
            "48":"images/icon.png", 
            "128":"images/icon.png" 
        }, 

  // "permissions": [
  //   "tabs"],

   "content_scripts": [
    {
      "matches": ["http://www.youtube.com/*"],
     
      "js": ["scripts/jquery.js", "scripts/script.js"]
    }],

   "web_accessible_resources": ["scripts/script.js","images/htmlify.png"]
}
